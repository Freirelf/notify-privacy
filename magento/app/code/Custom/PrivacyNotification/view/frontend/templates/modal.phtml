<?php if ($block->shouldShowModal()): ?>
<div id="privacy-modal" class="modal">
    <div class="modal-content">
        <h2>Atualização da Política de Privacidade</h2>
        <p>Precisamos da sua confirmação para continuar utilizando a plataforma.</p>
        <button id="accept-privacy-policy">Aceitar</button>
    </div>
</div>

<script>
    document.getElementById("accept-privacy-policy").addEventListener("click", function () {
        fetch('/privacy/accept', { method: 'POST' })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    document.getElementById("privacy-modal").style.display = "none";
                }
            });
    });
</script>
<?php endif; ?>
